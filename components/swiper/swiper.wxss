.menu{
  font-size: 28rpx;
  padding: 8rpx 10rpx;
  color: rgba(255, 255, 255, .6);
  margin-bottom: 24rpx;
  position: relative;
}
.menu .menu-item{
  padding:12rpx 14rpx;
  min-width: 130rpx;
}
.menu .menu-item.current{
  color: #fff;
  font-weight: 500;
}
.menu-flag{
  height: 4rpx;
  position: absolute;
  bottom: 6rpx;
  left: 0;
  background: #23d7d4;
  transform: scaleX(0.4);
  transition: all linear .2s;
}
.menu-flag.move{
  transition: all linear .001s;
}

.flex-between{
  display: flex;
  justify-content: space-between;
}
.flex-center{
  display: flex;
  justify-content: center;
  align-items: center;
}
.hide{
  display: none;
}